<h2>Changer son mot de passe</h2>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Confirmer nouveau mot de passe", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Changer mot de passe %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
