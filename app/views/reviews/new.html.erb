<div class="container">
  <% if current_user[:id] == @wedding[:user_id] %>
     <h3 class="text-center">
      <span class="section-title">Photo Album</span>
    </h3>

    <%= render 'weddings/album-form' %>
    <%= link_to "Back to profile", profile_path(current_user) %>
  <% else %>

    <h1>This is not a wedding that you organize</h1>
    <p>Consequently, you won't create an album photo memories</p>

    <%= link_to "Back to profile", profile_path(current_user) %>
  <% end %>
</div>

