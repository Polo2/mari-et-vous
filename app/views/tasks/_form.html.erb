<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <h3 class="text-center">
        <span class="section-title">Choose one new task</span>
      </h3>
      <div class="breath">
        <%= simple_form_for([@wedding, @task]) do |f| %>

          <%= f.input :name, label: false, placeholder: "Select a state", collection: @tasks_filtered_names_list, class: "button" %>

          <%= f.submit "Create", class: "button maxwidth" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
