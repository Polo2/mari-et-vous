<p id="notice"><%= notice %></p>

<%= render "layouts/banner" %>

<div class="row">
  <div class="col-xs-12 col-sm-6">
    <div class="info-wedding-description">
      <p>
        <strong>Description:</strong>
        <%= @wedding.description %>
      </p>
  <%= link_to 'Edit', edit_wedding_path(@wedding) %> |
<%= link_to 'Back', weddings_path %>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6">
    <div class="info-wedding-location">
      <h4>The place to be on <strong><%= @wedding.date %></strong>:</h4>
      <h5><%= @wedding.location %></h5>
      <div id="map" style="width: 300px; height: 400px;"></div>
    </div>
  </div>

</div>
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
      markers = handler.addMarkers(<%= raw @markers.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(10);
      }
    });
  <% end %>
<% end %>

