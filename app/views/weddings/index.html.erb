<p id="notice"><%= notice %></p>

<h1>Weddings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Location</th>
      <th>Capacity</th>
      <th>Organizer</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @weddings.each do |wedding| %>
      <tr>
        <td><%= wedding.title %></td>
        <td><%= wedding.description %></td>
        <td><%= wedding.date %></td>
        <td><%= wedding.location %></td>
        <td><%= wedding.capacity %></td>
        <td><%= wedding.user.first_name.capitalize %> <%= wedding.user.last_name.capitalize %></td>
        <td>
          <% if policy(wedding).show? %>
            <%= link_to 'Show', wedding_path(wedding) %>
          <% end %>
        </td>
        <td>
          <% if policy(wedding).edit? %>
            <%= link_to 'Edit', edit_wedding_path(wedding) %>
          <% end %>
        </td>
        <td>
          <% if policy(wedding).destroy? %>
            <%= link_to 'Destroy', wedding, method: :delete, data: { confirm: 'Arusere you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Wedding).new? %>
  <%= link_to 'New wedding', new_wedding_path %>
<% end %>
